<Controls:MetroWindow x:Class="frmInfoBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    Style="{StaticResource MetroWindow}" x:Name="window" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False">
    <StackPanel Orientation="Vertical" Margin="10">
        <TextBlock Text="{Binding ElementName=window,Path=Text}"/>
        <Button Content="{Binding ElementName=window,Path=OKText}"/>
    </StackPanel>
</Controls:MetroWindow>
